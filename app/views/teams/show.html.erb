<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @team.name %>
</p>

<p>
  <b>City:</b>
  <%= @team.city %>
</p>

<p>
  <b>Country:</b>
  <%= @team.country %>
</p>

<p>
  <b>Year:</b>
  <%= @team.year %>
</p>

<p>
  <b>Content:</b>
  <%= @team.content %>
</p>
<h2>Managers</h2>
<% if @team.managers.any? %>
	<% @team.managers.each do |manager| %>
		<li class="manager"><%= link_to manager %></li>
	<% end %>
<% end %>
<h2>Players</h2>
<% if @team.players.any? %>
	<% @team.players.each do |player| %>
		<li class="player"><%= link_to player %></li>
	<% end %>
<% end %>


<%= link_to 'Edit', edit_team_path(@team) %> |
<%= link_to 'Back', teams_path %>
