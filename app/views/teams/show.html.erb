<p id="notice"><%= notice %></p>
<div class="entry-options">
	<% if current_user %>
		<%= link_to 'Edit', edit_team_path(@team) %> |
	<% end %>
	<%= link_to 'Back', teams_path %>
</div>
<div id="teams" class="parent-show">
	<p>
	  <b>Name:</b>
	  <%= @team.name %>
	</p>

	<p>
	  <b>City:</b>
	  <%= @team.city %>
	</p>

	<p>
	  <b>Country:</b>
	  <%= @team.country %>
	</p>

	<p>
	  <b>Year:</b>
	  <%= @team.year %>
	</p>

	<p>
	  <b>Content:</b>
	  <%= @team.content %>
	</p>
	<div id="rating-values">
		<img src="/images/rating_new_bg.png" />																	
	</div>
	<span class="rating">
	  	<% unless @team.ratings.blank? %>
			<%= @team.weighted_rating %>
	  	<% end %>
	</span>
</div>
<div id="associations">
	<div class="child-show">
		<h2>Managers</h2>
		<ul>
		<% if @team.managers.any? %>
			<% @team.managers.each do |manager| %>
				<li class="manager"><%= link_to manager %></li>
			<% end %>
		<% end %>
		</ul>
	</div>
	<div class="child-show">
		<h2>Players</h2>
		<ul>
		<% if @team.players.any? %>
			<% @team.players.each do |player| %>
				<li class="player"><%= link_to player %></li>
			<% end %>
		<% end %>
		</ul>
	</div>
</div>
<%= render 'ratings/new', :rateable => @team %>
