<p id="notice"><%= notice %></p>
<div class="entry-options">
	<% if current_user %>
		<%= link_to 'Edit', edit_manager_path(@manager) %> |
	<% end %>
	<%= link_to 'Back', managers_path %>
</div>
<div id="managers" class="parent-show">
	<h1><%= @manager.first_name %>  <%= @manager.last_name %></h1>
	<div id="manager-rating">
		<div id="rating-values">
			<img src="/images/rating_new_bg.png" />																	
		</div>
		<span class="rating">
				<% unless @manager.ratings.blank? %>
				<%= @manager.weighted_rating %>
	  		<% end %>
		</span>	
	</div>
	<div id="manager-content">
		<%= @manager.content %>
	</div>
</div>
<div id="associations">
	<div class="child-show">
		<h2>Teams</h2>
		<ul>
		<% if @manager.teams.any? %>
			<% @manager.teams.each do |team| %>
				<li class="player"><%= link_to team %></li>
			<% end %>
		<% end %>
		</ul>
	</div>
</div>

<%= render 'ratings/new', :rateable => @manager %>