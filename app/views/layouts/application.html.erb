<!DOCTYPE html>
<html>
<head>
  <title>Atgdb</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
	<div id="wrapper">
		<div id="header">
			<h1>ATGDB</h1>
			<div id="navigation">
				<ul>
					<li><%= link_to("Players", :players) %></li>
					<li><%= link_to("Managers", :managers) %></li>
					<li><%= link_to("Teams", :teams) %></li>
				</ul>
			</div>
			<div id="user_nav">
			  <% if current_user %>
			    <%= link_to "Edit Profile", edit_user_path(:current) %> |
			    <%= link_to "Logout", logout_path %>
			  <% else %>
			    <%= link_to "Register", new_user_path %> |
			    <%= link_to "Login", login_path %>
			  <% end %>
			</div>			
		</div>
		<div id="content">
			<%= yield %>
		</div>
	</div>
</body>
</html>