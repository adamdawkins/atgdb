<p id="notice"><%= notice %></p>
<div class="entry-options">
	<% if current_user %>
		<%= link_to 'Edit', edit_player_path(@player) %> |
	<% end %>
	<%= link_to 'Back', players_path %>
</div>
<div id="players" class="parent-show">
	<h1>  <%= @player.first_name %>  <%= @player.last_name %></h1>

	<p>
	  <b>Position:</b>
	  <%= @player.position %>
	</p>

	<p>
	  <b>Content:</b>
	  <%= @player.content %>
	</p>
	<div id="rating-values">
		<img src="/images/rating_new_bg.png" />																	
	</div>
	<span class="rating">
			<% unless @player.ratings.blank? %>
			<%= @player.weighted_rating %>
	  	<% end %>
	</span>	
</div>
<div id="associations">
	<div class="child-show">
		<h2>Teams</h2>
		<ul>
		<% if @player.teams.any? %>
			<% @player.teams.each do |team| %>
				<li class="player"><%= link_to team %></li>
			<% end %>
		<% end %>
		</ul>
	</div>
</div>

<%= render 'ratings/new', :rateable => @player %>